{
  "variables": {
    "iso_url": "https://buildlogs.centos.org/rolling/7/isos/x86_64/CentOS-7-x86_64-Minimal.iso",
    "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
    "iso_checksum_type": "sha256",
    "description": "CentOS 7.3 (build 1611): CentOS-7-x86_64-Minimal.iso, 20GB /, nothing extra",
    "artifact_version": "7.3.1611",
    "redhat_release": "7.3",
    "redhat_platform": "x86_64",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "disk_size": "20000",
    "atlas_token": ""
  },

  "builders": [
    {   
      "name": "centos-{{user `artifact_version`}}",
      "type": "virtualbox-iso",
      "vm_name": "packer-centos-vm",

      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "guest_additions_path": "VBoxGuestAdditions.iso",

      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/vagrant.ks<enter><wait>"
      ],

      "shutdown_command": "sudo -S /sbin/halt -h -p",
      "shutdown_timeout" : "5m",
      
      "ssh_wait_timeout": "15m",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,       
      "ssh_pty": true,

      "output_directory": "builds",

      "vboxmanage": [
        [  "modifyvm",  "{{.Name}}",  "--memory",  "640" ],
        [  "modifyvm",  "{{.Name}}",  "--cpus",  "2" ]
      ],
      "hard_drive_interface": "sata",
      "virtualbox_version_file": ".vbox_version"
    }
  ], 
  
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false
      },
      {
        "type": "atlas",
        "token": "{{user `atlas_token`}}",
        "artifact": "sbeliakou/centos-{{user `redhat_release`}}-{{user `redhat_platform`}}-minimal",
        "artifact_type": "vagrant.box",
        "only": ["centos-{{user `artifact_version`}}"],
        "metadata": {
          "description": "{{user `artifact_description`}}",
          "version": "{{user `artifact_version`}}",
          "provider": "virtualbox"
        }
      }
    ]
  ],
  
  "provisioners": [
    {
      "type": "shell",
      "start_retry_timeout": "1m",
      "expect_disconnect": true,
      "pause_before": "5s",
      "override": {
        "centos-{{user `artifact_version`}}": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ]
}
